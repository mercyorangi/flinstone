<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
	    android:orientation="vertical" >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="About park"
	        android:textColor="#000000"
	        android:paddingTop="10dp"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <TextView
	        android:id="@+id/tv_reporter_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="#19A3FF" />
	    
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/separator_dashes"
	        android:textColor="#19A3FF"
	        />
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="What to see"
	        android:textColor="#000000"
	        android:paddingTop="10dp"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
	     
	
	    <TextView
	        android:id="@+id/tv_reporter_phone"
	        android:layout_width="wrap_content"
	        android:textColor="#19A3FF"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/separator_dashes"
	        android:textColor="#19A3FF"
	        
	        />
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000"
	        android:paddingTop="10dp"
	        android:text="Wildlife"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
      
	    <TextView
	        android:id="@+id/tv_item_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#19A3FF"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/separator_dashes"
	        android:textColor="#19A3FF"
	        
	        />
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Fun/Major Activities"
	        android:textColor="#000000"
	        android:paddingTop="10dp"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	  
	    <TextView
	        android:id="@+id/tv_item_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#19A3FF"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/separator_dashes"
	        android:textColor="#19A3FF"
	        
	        />
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Where to stay"
	        android:textColor="#000000"
	        android:paddingTop="10dp"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <TextView
	        android:id="@+id/tv_item_model"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#19A3FF"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/separator_dashes"
	        android:textColor="#19A3FF"
	        
	        />
	    </LinearLayout>

</RelativeLayout>
